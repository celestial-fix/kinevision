# Database
DATABASE_URL=postgresql://kinevision:securepassword@postgres:5432/kinevision_db

# JWT Secret (for token signing)
SECRET_KEY=your-secret-key-change-this-in-production

# SMTP Configuration (for Magic Link emails)
